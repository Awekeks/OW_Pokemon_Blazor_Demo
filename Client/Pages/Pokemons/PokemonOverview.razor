@attribute [Route(RouteCatalog.Pokemons)]

@using Models.Pokemons
@using Services.Pokemons

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <PokemonList OnPokemonSelected="OnPokemonSelected" />
        </MudItem>

        @if (_selectedPokemon != null)
        {
            <MudItem xs="12" sm="6" md="4">
                <PokemonDetails PokemonList="_selectedPokemon" />
            </MudItem>
        }
    </MudGrid>
</MudContainer>